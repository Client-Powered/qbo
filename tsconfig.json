{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "declaration": true,
    "outDir": "./dist/"
  },
  "compileOnSave": false,
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.unit.test.ts",
    "_local.ts"
  ]
}
